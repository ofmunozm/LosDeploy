{
  "family": "task-blacklist",
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "3072",
  "executionRoleArn": "arn:aws:iam::565528060844:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "containerDefinitions": [
    {
      "name": "blacklist-docker",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:postgres2025@databaseblacklist.c12gywsk4yg0.us-east-2.rds.amazonaws.com:5432/blacklist_db"
        },
        {
          "name": "SECRET_KEY",
          "value": "TU_SECRET_KEY_DE_PRODUCCION"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "TU_JWT_SECRET_KEY_DE_PRODUCCION"
        },
        {
          "name": "STATIC_TOKEN",
          "value": "TU_STATIC_TOKEN_DE_PRODUCCION"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-blacklist",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
